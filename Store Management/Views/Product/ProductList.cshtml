@model IEnumerable<Store_Management.DTO.ProductListDTO>

@{
    ViewBag.Title = "ProducList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProducList</h2>
<style>

</style>

@section scripts
    {
    
    <script>
        $(document).ready(function () {
            $('#tblProduct').DataTable(
                {});
        });
    </script>
}
<p>
    @Html.ActionLink("Create New", "AddUpdateProduct")
</p>
<table class="table" id="tblProduct">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductQuantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellingPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductQuantity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.pk_ProductID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.pk_ProductID })
                </td>
            </tr>
        }

    </tbody>

</table>
