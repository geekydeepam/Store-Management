@model IEnumerable<Store_Management.Common.CustomerMst>

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerList</h2>

@section scripts{
    <script>
    $(document).ready(function () {
    $('#CustTable').DataTable(
    {});
    });
    </script>
}
<p>
    @Html.ActionLink("Create New", "SaveUpdateCustomer")
</p>
<table id="CustTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobNo)
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobNo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.pk_CustId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.pk_CustId })
                </td>
            </tr>
        }
    </tbody>
    

</table>
